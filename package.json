{
  "name": "peanut-presence",
  "displayName": "Peanut Presence",
  "description": "A simple and customizable Discord Rich Presence extension for VS Code.",
  "version": "1.0.0",
  "publisher": "peanutdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/KuzeyMurathan/peanut-presence.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Peanut Presence",
      "properties": {
        "peanutpresence.applicationId": {
          "type": "string",
          "default": "",
          "description": "The Discord Application ID for your rich presence.",
          "order": 0
        },
        "peanutpresence.largeImageKey": {
          "type": "string",
          "default": "vscode",
          "description": "The key for the large image asset.",
          "order": 1
        },
        "peanutpresence.largeImageText": {
          "type": "string",
          "default": "Visual Studio Code",
          "description": "The tooltip text for the large image.",
          "order": 2
        },
        "peanutpresence.smallImageKey": {
          "type": "string",
          "default": "",
          "description": "The key for the small image asset (leave empty to use file type icon).",
          "order": 3
        },
        "peanutpresence.smallImageText": {
          "type": "string",
          "default": "",
          "description": "The tooltip text for the small image.",
          "order": 4
        },
        "peanutpresence.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Peanut Presence.",
          "order": 5
        }
      }
    },
    "commands": [
      {
        "command": "peanutpresence.enable",
        "title": "Peanut Presence: Enable"
      },
      {
        "command": "peanutpresence.disable",
        "title": "Peanut Presence: Disable"
      },
      {
        "command": "peanutpresence.reconnect",
        "title": "Peanut Presence: Reconnect"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.3.0"
  }
}