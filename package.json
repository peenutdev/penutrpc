{
  "name": "peanut-presence",
  "displayName": "Peanut Presence",
  "description": "A simple and customizable Discord Rich Presence extension for VS Code.",
  "version": "1.5.0",
  "publisher": "peanutdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/peenutdev/penutrpc.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Peanut Presence",
      "properties": {
        "peanutpresence.applicationId": {
          "type": "string",
          "default": "",
          "description": "The Discord Application ID for your rich presence.",
          "order": 0
        },

        "peanutpresence.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Peanut Presence.",
          "order": 0
        },
        "peanutpresence.buttonLabel": {
          "type": "string",
          "default": "GitHub",
          "description": "The label for the button on your Rich Presence.",
          "order": 1
        },
        "peanutpresence.buttonUrl": {
          "type": "string",
          "default": "https://github.com/peenutdev/penutrpc/releases/tag/Release",
          "description": "The URL for the button on your Rich Presence.",
          "order": 2
        }
      }
    },
    "commands": [
      {
        "command": "peanutpresence.enable",
        "title": "Peanut Presence: Enable"
      },
      {
        "command": "peanutpresence.disable",
        "title": "Peanut Presence: Disable"
      },
      {
        "command": "peanutpresence.reconnect",
        "title": "Peanut Presence: Reconnect"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.3.0"
  }
}